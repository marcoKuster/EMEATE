<apex:component >    <apex:attribute name="type" type="String" description="Image to be output for the tool tip" default="description" required="false"/>    <apex:attribute name="label" type="String" description="Output to show in the label" default="" required="false"/>    <apex:attribute name="id" type="String" description="ID to use when outputting the hover" default="" required="true"/>    <apex:attribute name="body" type="String" description="Output to show in the body of the hover." required="false"/>    <apex:attribute name="width" type="String" description="Output width of the body of the hover." default="300" required="false"/>         <apex:includeScript value="{!$Resource.boxover}"/>        <style>        .tooltipbody {            background: #FFFEBA !important;            padding: 5px;            border:1px solid orange;            -moz-border-radius-topleft: 5px;            -moz-border-radius-topright: 5px;            -moz-border-radius-bottomleft: 5px;            -moz-border-radius-bottomright: 5px;            width: {!width}px;        }        .adm_transOFF, .adm_transON{ display:inline;}        div.adm_transOFF {width: 16px; }        div.adm_transON {width: 16px; opacity:.30;filter: alpha(opacity=30); -moz-opacity: 0.3;}    </style>    <apex:outputText rendered="{!type = 'help'}" >        <span class="helpButton" id="{!id}_help" title="body=[{!body}] cssheader=[tooltipheader] cssbody=[tooltipbody]">            <apex:outputText rendered="{!NOT(label='')}"><apex:outputLabel value="{!label}" /></apex:outputText>            <apex:image url="/img/s.gif" styleClass="helpOrb" alt="" title="" />        </span>        <script type="text/javascript">            sfdcPage.setHelp('{!JSENCODE(id)}', '{!JSENCODE(body)}');        </script>    </apex:outputText>    <apex:outputText rendered="{!NOT(type = 'help')}">        <div onmouseover="addMouseOver(this)" onfocus="addMouseOver(this)" class="mouseOverInfoOuter" title="body=[{!body}] cssheader=[tooltipheader] cssbody=[tooltipbody]">            <img title="" class="infoIcon" alt="" src="/s.gif"/>            <div style="display: none; opacity: 0;" class="mouseOverInfo">depends on "Product Area"</div>        </div>    </apex:outputText></apex:component>