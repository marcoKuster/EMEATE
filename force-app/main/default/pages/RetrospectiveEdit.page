<apex:page standardController="Retrospective__c" extensions="RetrospectiveControllerExtension" standardStylesheets="true" title="Retrospectives">
  <apex:sectionHeader title="{!$ObjectType.Retrospective__c.label}" subtitle="{!Retrospective__c.name}"/>
  <apex:form >
    <apex:pageBlock title="Retrospective Edit" mode="edit">
      <apex:pageBlockButtons >
        <apex:commandButton value="Save" action="{!save}"/>
        <apex:commandButton value="Cancel" action="{!cancel}" />
      </apex:pageBlockButtons>
        <apex:pageMessage detail="{!customErrorMessage}" severity="error" strength="3" rendered="{!hasCustomError}"/>
      <apex:pageBlockSection title="Information" columns="2" rendered="{!(canEdit && isEmployee)}">
        <apex:inputField value="{!Retrospective__c.name}" required="true"/>
        <apex:inputField value="{!Retrospective__c.Team__c}" required="true"/>
        <apex:outputField value="{!Retrospective__c.User__c}"/>
        <apex:inputField value="{!Retrospective__c.Manager__c}" required="true"/>
        <apex:outputField value="{!Retrospective__c.Status__c}"/>
        <apex:inputField value="{!Retrospective__c.Review_Period__c}" required="true"/>
      </apex:pageBlockSection>
      <apex:pageBlockSection title="Information" columns="2" rendered="{!(!canEdit || !isEmployee)}">
        <apex:outputField value="{!Retrospective__c.name}"/>
        <apex:outputField value="{!Retrospective__c.Team__c}"/>
        <apex:outputField value="{!Retrospective__c.User__c}"/>
        <apex:outputField value="{!Retrospective__c.Manager__c}"/>
        <apex:outputField value="{!Retrospective__c.Status__c}"/>
        <apex:outputField value="{!Retrospective__c.Review_Period__c}"/>
      </apex:pageBlockSection>
      <apex:pageBlockSection title="Employee Comments" columns="1" rendered="{!(canEdit && isEmployee)}">
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!whatWentWellLabel}" for="what_went_well_employee"/>
            <apex:inputTextArea id="what_went_well_employee" value="{!Retrospective__c.What_Went_Well_employee__c}" cols="120" rows="6"/>
        </apex:pageBlockSectionItem>    
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!whatDidNotGoWellLabel}" for="what_didnt_go_well_employee"/>
            <apex:inputTextArea id="what_didnt_go_well_employee" value="{!Retrospective__c.What_Didn_t_Go_Well_employee__c}" cols="120" rows="6"/>
        </apex:pageBlockSectionItem>    
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!whatToDoBetterLabel}" for="what_to_do_better_employee"/>
            <apex:inputTextArea id="what_to_do_better_employee" value="{!Retrospective__c.What_To_Do_Better_Next_Time_employee__c}" cols="120" rows="6"/>
        </apex:pageBlockSectionItem>    
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!overallRatingLabel}" for="overall_rating_employee"/>
            <apex:inputField id="overall_rating_employee" required="true" value="{!Retrospective__c.Overall_Rating_employee__c}"/>
        </apex:pageBlockSectionItem>    
      </apex:pageBlockSection>
      <apex:pageBlockSection title="Employee Comments" columns="1" rendered="{!!(canEdit && isEmployee)}">
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!whatWentWellLabel}" for="what_went_well_employee"/>
            <apex:outputText id="what_went_well_employee" value="{!Retrospective__c.What_Went_Well_employee__c}" />
        </apex:pageBlockSectionItem>    
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!whatDidNotGoWellLabel}" for="what_didnt_go_well_employee"/>
            <apex:outputText id="what_didnt_go_well_employee" value="{!Retrospective__c.What_Didn_t_Go_Well_employee__c}" />
        </apex:pageBlockSectionItem>    
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!whatToDoBetterLabel}" for="what_to_do_better_employee"/>
            <apex:outputText id="what_to_do_better_employee" value="{!Retrospective__c.What_To_Do_Better_Next_Time_employee__c}" />
        </apex:pageBlockSectionItem>    
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!overallRatingLabel}" for="overall_rating_employee"/>
            <apex:outputText id="overall_rating_employee" value="{!Retrospective__c.Overall_Rating_employee__c}"/>
        </apex:pageBlockSectionItem>    
      </apex:pageBlockSection>
      <apex:pageBlockSection title="Manager Comments" columns="1" rendered="{!(canEdit && !isEmployee && isManager)}">
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!whatWentWellLabel}" for="what_went_well_manager"/>
            <apex:inputTextArea id="what_went_well_manager" value="{!Retrospective__c.What_Went_Well_manager__c}" cols="120" rows="6"/>
        </apex:pageBlockSectionItem>    
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!whatDidNotGoWellLabel}" for="what_didnt_go_well_manager"/>
            <apex:inputTextArea id="what_didnt_go_well_manager" value="{!Retrospective__c.What_Didn_t_Go_Well_manager__c}" cols="120" rows="6"/>
        </apex:pageBlockSectionItem>    
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!whatToDoBetterLabel}" for="what_to_do_better_manager"/>
            <apex:inputTextArea id="what_to_do_better_manager" value="{!Retrospective__c.What_To_Do_Better_Next_Time_manager__c}" cols="120" rows="6"/>
        </apex:pageBlockSectionItem>    
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="{!overallRatingLabel}" for="overall_rating_manager"/>
            <apex:inputField id="overall_rating_manager" required="true" value="{!Retrospective__c.Overall_Rating_manager__c}"/>
        </apex:pageBlockSectionItem>    
      </apex:pageBlockSection>  
    </apex:pageBlock>
  </apex:form>
</apex:page>