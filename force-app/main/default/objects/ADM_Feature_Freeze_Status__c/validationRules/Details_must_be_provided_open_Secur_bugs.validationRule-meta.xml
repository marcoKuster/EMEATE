<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Details_must_be_provided_open_Secur_bugs</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(P012_Security_Bugs_Closed__c, &quot;No&quot;), ISBLANK(Provide_details_on_open_Security_bugs__c))</errorConditionFormula>
    <errorDisplayField>Provide_details_on_open_Security_bugs__c</errorDisplayField>
    <errorMessage>Details must be provided when reporting open P0, P1 or P2 Security bugs.</errorMessage>
</ValidationRule>
