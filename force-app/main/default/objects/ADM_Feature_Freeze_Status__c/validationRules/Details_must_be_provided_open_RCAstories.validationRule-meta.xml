<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Details_must_be_provided_open_RCAstories</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(RCA_Stories_1_Month_Closed_Scheduled__c, &quot;No&quot;), ISBLANK(Provide_details_on_open_RCA_Stories__c))</errorConditionFormula>
    <errorDisplayField>Provide_details_on_open_RCA_Stories__c</errorDisplayField>
    <errorMessage>Details must be provided when reporting RCA stories that are older than one month that are not Closed or Scheduled.</errorMessage>
</ValidationRule>
